doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Shintolin - Explore. Settle. Trade. Conquer.
    link(rel='stylesheet', type='text/css', href='/bootstrap-3.3.5-dist/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/bootstrap-3.3.5-dist/css/bootstrap-theme.min.css')
    link(rel='stylesheet', type='text/css', href='/css/default.css')
    link(rel='stylesheet', type='text/css', href='/css/apps/page.css')
  body

    mixin pill(metric, label)
      li(role='presentation', class={active: locals.metric == metric}): a(href='/rankings?metric=#{metric}')=label

    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          if logged_in
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
          a.navbar-brand(href='/') Shintolin
        if logged_in
          #navbar.navbar-collapse.collapse
            ul.nav.navbar-nav.navbar-right
              li: a(href='/game') &larr; Return to Game

    block content

    script(src='/js/lib/jquery-2.1.4.min.js')
    script(src='/bootstrap-3.3.5-dist/js/bootstrap.min.js')
