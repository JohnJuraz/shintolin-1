@require "./variables"

// Fonts

@font-face
  font-family 'Freckle Face'
  font-style normal
  font-weight 400
  src local('Freckle Face'), local('FreckleFace-Regular'), url(/fonts/freckle-face/freckleface-latin-ext.woff2) format('woff2')
  unicode-range U+0100-024F, U+1E00-1EFF, U+20A0-20AB, U+20AD-20CF, U+2C60-2C7F, U+A720-A7FF

@font-face
  font-family 'Freckle Face'
  font-style normal
  font-weight 400
  src local('Freckle Face'), local('FreckleFace-Regular'), url(/fonts/freckle-face/freckleface-latin.woff2) format('woff2')
  unicode-range U+0000-00FF, U+0131, U+0152-0153, U+02C6, U+02DA, U+02DC, U+2000-206F, U+2074, U+20AC, U+2212, U+2215, U+E0FF, U+EFFD, U+F000

// HTML elements

body
  cursor default
  background-color $bg_light

dl
  margin 0
  width 100%
  dt, dd
    float left
  dt
    width 66%
    clear left
    text-align right
  dd
    width 34%
    padding-left 8px
    overflow hidden

// Bootstrap Components

.jumbotron
  background-color $bg_dark
  color $text_light

.well
  background-color $bg_dark
  background-image $gradient_dark
  border-color $border_dark
  color $text_light

.nav.nav-pills
  li.active
    a
      background-color $text_dark
      color $text_light

