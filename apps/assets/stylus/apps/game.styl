@require "../variables"
@require "../shared/nav"

body
  padding-top 51px
  margin-bottom 2em

// STATS (TOP)

.statsbox-top
  text-align center
  margin-bottom 1em
  background-color ($bg_dark + 15%)
  color $text_light
  width 100%
  padding .5em 0 .25em 0
  .stat
    margin 0 1em
    display inline-block
    text-align right
    width 140px
    label, .progress
      display inline-block
      height 20px
      margin 0
    label
      position relative
      top -4px
      margin-right .5em
    .progress
      position relative
      width 75px
      background-image none
      background-color $bg_dark
      .content
        position absolute
        top 0
        left 0
        width @width
        text-align center
    @media (min-width: 768px)
      width 150px
      .progress
        width 85px
        .content
          width @width
    @media (min-width: 992px)
      width 200px
      .progress
        width 135px
        .content
          width @width
    @media (min-width: 1200px)
      width 250px
      .progress
        width 185px
        .content
          width @width

// MAP
.map
  text-align center
  margin-bottom 1em

  .location
    background-color $bg_dark
    color $text_light
    padding 1em
    border-radius .5em
    text-align center
    margin-bottom 1em
    h1
      font 1.75em $font_logo
      margin 0 0 .25em 0
      a
        color $text_light
      .disabled
        color ($bg_dark + 20%)
    h2
      font-size 1em
      margin 0
      a
        color $text_light

  .flavor
    margin-bottom 1em

  .map-table
    display inline-block
    border 1px solid ($bg_dark + 65%)
    border-radius .8em
    overflow hidden
    table
      margin 0 auto
      td.map
        &.current
          > div
            box-shadow inset 0 0 6px 4px ($bg_dark + 5%)
            border-radius 1em
        width 70px
        height @width
        background-color transparent
        background-size @width @width
        background-repeat no-repeat
        text-align center
        > div
          overflow hidden
          max-height @width
          min-height @width
          padding-top 8px
          line-height 1em
          form
            margin 0
            padding 0
          button
            text-transform uppercase
            min-width 30px
            margin-bottom 3px
            font-weight bold
          .mapdata
            display inline-block
            padding 0 4px
            background-color $bg_dark
            color $text_light
            font-size 11px
        @media (min-width: 768px)
          width 70px
          height @width
          background-size @width @width
          > div
            max-height @width
            min-height @width
        @media (min-width: 992px)
          width 90px
          height @width
          background-size @width @width
          > div
            max-height @width
            min-height @width

// STATS (BOTTOM)

.statsbox-bottom
  padding 1em
  clear right
  dl
    width 180px
    dt
      text-align left
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
  h2
    .title
      font .75em $font_logo
    .label
      font-size 11px
      position relative
      top -4px
    margin 0 0 .5em 0
  > div
    margin-bottom 1.5em
    a.btn
      margin-top 1em
  ul, ul li
    list-style none
    padding 0
    margin 0

// FLAVOR

.flavor
  text-align left
  .writing
    text-transform uppercase
    font-weight bold
    font-family monospace
    text-align center
    margin 5px 0 0 0
  .alerts
    margin-top 1em

// ACTIONS

.actions
  margin 1.5em 0
  .tab-content
    background-color white
    border-left 1px solid #ddd
    border-bottom 1px solid #ddd
    border-right 1px solid #ddd
    padding 1em
    form.action
      margin-bottom .5em
      input[type=submit]
        margin-right 6px
      .form-control
        display inline-block
        width auto
      select
        max-width 180px
      span
        display inline-block
        margin 0 6px
    form.action:last-child
      margin-bottom 0
    p.empty
      margin .5em 0
      text-align center
      color #ccc
  .progress.building
    position relative
    width 100%
    .content
      position absolute
      top 0
      left 0
      width @width

// CHAT

.chat-nav
  margin-bottom 1.5em
.chat
  .chat-entry
    input[type=text]
      display inline-block
    .legend
      label
        margin-right .5em
  &.chat-history
    .jumbotron
      padding 1em 0
      input[type=text]
        width 20em
        @media (min-width: 768px)
          width 45em
        @media (min-width: 992px)
          width 62em
        @media (min-width: 1200px)
          width 70em
      button
        color $text_light
  .messages
    background-color white
    border-radius .5em
    margin-bottom 2em
    padding 1em
    .message
      margin-bottom .5em
      > div
        padding .5em
        border-radius .5em
      .announcement
        background-color $bg_dark
        color $text_light
      .social
        background-color $bg_light
        overflow hidden
        text-overflow ellipsis
      .social-shout
        font-weight bold
      .social-whisper, .social-emote
        font-style italic
      .social-ooc
        .label
          position relative
          top -1px
      .time
        font-size 10px
        font-weight normal
        font-style normal
.game
  .chat
    background-color white
    border-radius .5em
    form
      padding 1em 1em 0 1em
      .form-group
        margin-bottom 6px
        input[type=text]
          width 19.5em
          @media (min-width: 768px)
            width 19.5em
          @media (min-width: 992px)
            width 27em
          @media (min-width: 1200px)
            width 34em
      margin-bottom 0
    .messages
      margin-bottom 0

// SKILLS

.skills-page
  margin-top 1em

  h2
    font 1.75em $font_logo
    margin 0
  h3
    font-size 1em
    margin 0 0 1em 0

  .progress
    position relative
    width 100%
    background-color #333
    background-image none
    .content
      position absolute
      top 0
      left 0
      width @width
      text-align center
  p.cost
    font-size 11px

  ul.skills
    margin-top 1em
    padding-left 1em
    &.rank-0
      padding-left 0
    .skill
      margin-bottom 1em
      list-style none
      .content
        border 1px solid $border_dark
        border-radius .5em
        padding .5em
        p
          font-size 11px
        input.disabled
          color #333
      &.purchased
        > .content
          background-color $bg_dark
          color $text_light
      &.not-purchasable
        .content
          opacity .5
      form
        text-align center
