extends ./_layout.jade

block content
  .col-md-12
    center
      table
        for row in grid
          tr
            for tile in row
              td.map(class='tile-#{tile.style}')
                if tile.tile.building
                  span.mapdata.feature= data.buildings[tile.tile.building].name
                  br
                if tile.creatures && tile.creatures.length
                  for creature in tile.creatures
                    span.mapdata.creature #{creature.creature.name} (#{creature.hp}/#{creature.hp_max})
                    br
                if tile.people && tile.people.length === 1
                  span.mapdata 1 person
                else if tile.people && tile.people.length > 1
                  span.mapdata #{tile.people.length} people
