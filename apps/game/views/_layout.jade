doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Shintolin - Explore. Settle. Trade. Conquer.
    link(rel='stylesheet', type='text/css', href='/bootstrap-3.3.5-dist/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/bootstrap-3.3.5-dist/css/bootstrap-theme.min.css')
    block styles
      link(rel='stylesheet', type='text/css', href='/css/default.css')
      link(rel='stylesheet', type='text/css', href='/game/css/game2.css')
      link(rel='stylesheet', type='text/css', href='/game/css/tiles.css')
  body

    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Shintolin
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li(class={active: locals._nav && locals._nav === 'game'}): a(href='/game') Game
            li(class={active: locals._nav && locals._nav === 'skills'}): a(href='/game/skills') Skills
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                | Community
                |  
                span.caret
              ul.dropdown-menu
                li: a(href='/rankings') Leaderboards
                li: a(href='/game/chat') Chat History
                li.divider(role='separator')
                li.dropdown-header External Links
                li: a(target='_blank', href='https://forums.shintolin.com') Forums
                //
                  li: a(target='_blank', href='http://shintolin.wikia.com/wiki/Shintolin') Wiki
          ul.nav.navbar-nav.navbar-right
            li.dropdown
              a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                if character.settlement_id
                  | #{character.name} of #{character.settlement_name}
                else
                  | #{character.name}
                |  
                span.caret
              ul.dropdown-menu
                li: a(href='/profile/#{character.slug}') Your Profile
                if character.settlement_id
                  li: a(href='/settlements/#{character.settlement_slug}') Your Settlement
                if is_developer
                  li: a(href='/game/dev') Developer Tools
                li: a(href='/logout') Log Out

    block content

    script(src='/js/lib/jquery-2.1.4.min.js')
    script(src='/js/lib/jquery.cookie.js')
    script(src='/bootstrap-3.3.5-dist/js/bootstrap.min.js')
    script(src='/js/game.js')
