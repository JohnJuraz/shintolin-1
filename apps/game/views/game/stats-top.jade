mixin progress(label, current, max, colorClass, title)
  div(data-toggle='tooltip', data-placement='top', title='#{current}/#{max}' + (title || ''))
    label #{label}
    .progress
      .progress-bar(class=colorClass, role='progressbar', aria-valuenow=current, aria-valuemin='0', aria-valuemax=max, style='width: #{Math.floor(current/max * 100)}%;')
      .content #{current}/#{max}

.gamebox.statsbox-top
  mixin progress('HP', character.hp, character.hp_max, 'progress-bar-danger')
  mixin progress('AP', character.ap, 100, 'progress-bar-warning', '+' + character.recovery + ' AP per hour')
  mixin progress('Hunger', character.hunger, 12, 'progress-bar-success')
