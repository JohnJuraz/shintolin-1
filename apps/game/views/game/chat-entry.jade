.chat-entry.text-center
  form(method='POST', action='/game/chat')
    span.form
      input(type='hidden', name='_csrf', value=csrf)
      if locals.origin && locals.origin.length
        input(type='hidden', name='origin', value=locals.origin)
      .form-group
        input.form-control(type='text', name='text', maxlength='255', placeholder='Communicate with your fellow players.', autofocus=(locals.origin === 'history'))
        button.btn.btn-link(type='submit')
          span.glyphicon.glyphicon-share-alt
          span.sr-only Send
    .legend
      label Tip:
      |  
      -var result = Math.floor(Math.random() * 9);
      case result
        when 0
          kbd /whisper @PLAYER pssst
        when 1
          kbd /w @PLAYER pssst
        when 2
          kbd /t @PLAYER pssst
        when 3
          kbd /shout howdy folks nearby
        when 4
          kbd /ooc oh hai all active players
        when 5
          kbd /emote wave hello
        when 6
          kbd /me wave hello
        when 7
          kbd /settlement oh hai fellow settlement members
        when 8
          kbd /g oh hai fellow settlement members
