.gamebox.infobox.chat
  if locals.center
    .chat-entry.text-center
      form(method='POST', action='/game/chat')
        .form
          input(type='hidden', name='_csrf', value=csrf)
          input(type='text', name='text', maxlength='200', placeholder='Communicate with your fellow players.')
          button.btn.btn-link(type='submit')
            span.glyphicon.glyphicon-share-alt
            span.sr-only Send
        .legend
          label Tip:
          |  
          -var result = Math.floor(Math.random() * 4);
          case result
            when 0
              kbd /whisper @PLAYER pssst
            when 1
              kbd /shout howdy folks nearby
            when 2
              kbd /ooc oh hai all active players
            when 3
              kbd /emote wave hello

  if messages.length
    for msg in messages
      .message
        case msg.type
          when 'announcement'
            .announcement
              div <strong>[Official]</strong> #{msg.text}
              div.time #{moment(msg.sent).fromNow()} <i>via</i> <u>Shintolin Staff</u>
          when 'attack'
            include chat/attack
          when 'attacked'
            include chat/attacked
          when 'attack_nearby'
            include chat/attack_nearby
          when 'autoeat'
            include chat/autoeat
          when 'built'
