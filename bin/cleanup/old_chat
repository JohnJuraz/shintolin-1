#!/usr/bin/env node_modules/coffee-script/bin/coffee

require 'babel/register'

db = require '../../db'
db.connect().then ->

  days = 365

  cutoff = new Date()
  cutoff.setDate(cutoff.getDate() - days)

  query =
    sent: {$lt: cutoff}

  db.chat_messages().deleteMany query, (err, messages) ->
    if err?
      console.log err
    else
      console.log "Removed #{messages} old messages."
    process.exit()
