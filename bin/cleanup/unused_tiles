#!/usr/bin/env coffee

require 'babel/register'

db = require '../../db'
config = require '../../config'

query =
  terrain: config.default_terrain
  people: {$size: 0}
  settlement_id: {$exists: true}

db.tiles.remove query, (err, tiles) ->
  if err?
    console.log err
  else
    console.log "Removed #{tiles} unused tiles."
  process.exit()
