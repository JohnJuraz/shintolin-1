#!/usr/bin/env node_modules/coffee-script/bin/coffee

require 'babel/register'

db = require '../../db'

query = {}
update =
  $set:
    searches: 0

db.tiles().updateMany query, update, (err) ->
  if err?
    console.log err
    process.exit 1
  else
    console.log 'Search Odds Reset'
    process.exit 0
